<div data-c-card data-c-background="white(100)" data-c-radius="rounded" data-tc-status="{{ job.status }}" data-c-padding="all(1)" data-c-margin="bottom(1)">
    <div data-c-grid="gutter middle">
        <div data-c-grid-item="tl(5of10)">
            <h2 data-c-margin="bottom(.5)" data-c-font-size="h3">{{ job.classification }} - <span data-c-font-weight="bold" data-c-margin="right(1)">{{ job.title }}</span><span {% if job.status == "published" %}data-c-tag="go"{% else %}data-c-tag="c1"{% endif %} data-c-font-size="small" data-c-radius="pill" data-c-margin="right(.5)">{{ job.status|title }}</span></h2>
            {% if job.type == "hr" %}
                <p data-c-font-size="small" data-c-margin="bottom(.5)">Hiring Manager: {{ job.manager }}</p>
            {% elseif job.type == "hm" %}
                <p data-c-font-size="small" data-c-margin="bottom(.5)">HR Advisers: {{ job.manager }}</p>
            {% endif %}
            {% if job.type == "hr" %}
                <p data-c-font-size="small" data-c-margin="top(.5)">
                    {% if job.status == "draft" %}
                        <a href="" data-c-color="c1" title="" data-c-margin="right(.5)">Edit Draft</a>
                        <a href="" data-c-color="c1" title="" data-c-margin="right(.5)">Preview Poster</a>
                        <a href="" data-c-color="c1" title="" data-c-margin="right(.5)">View Screening Plan</a>
                        <span data-c-color="gray" data-c-margin="right(.5)">No Applicants</span>
                    {% elseif job.status == "in review" %}
                        <a href="" data-c-color="c1" title="" data-c-margin="right(.5)">Edit Draft</a>
                        <a href="" data-c-color="c1" title="" data-c-margin="right(.5)">Preview Poster</a>
                        <a href="" data-c-color="c1" title="" data-c-margin="right(.5)">View Screening Plan</a>
                        <span data-c-color="gray" data-c-margin="right(.5)">No Applicants</span>
                    {% elseif job.status == "approved" %}
                        <a href="" data-c-color="c1" title="" data-c-margin="right(.5)">Edit Draft</a>
                        <a href="" data-c-color="c1" title="" data-c-margin="right(.5)">Preview Poster</a>
                        <a href="" data-c-color="c1" title="" data-c-margin="right(.5)">View Screening Plan</a>
                        <span data-c-color="gray" data-c-margin="right(.5)">No Applicants</span>
                    {% elseif job.status == "published" %}
                        <span data-c-color="gray" data-c-margin="right(.5)">Edit Draft</span>
                        <a href="" data-c-color="c1" title="" data-c-margin="right(.5)">View Poster</a>
                        <a href="" data-c-color="c1" title="" data-c-margin="right(.5)">View Screening Plan</a>
                        <span data-c-color="gray" data-c-margin="right(.5)">12 Applicants</span>
                    {% elseif job.status == "closed" %}
                        <span data-c-color="gray" data-c-margin="right(.5)">Edit Draft</span>
                        <a href="" data-c-color="c1" title="" data-c-margin="right(.5)">View Poster</a>
                        <a href="" data-c-color="c1" title="" data-c-margin="right(.5)">View Screening Plan</a>
                        <a href="" data-c-color="c1" title="" data-c-margin="right(.5)">34 Applicants</a>
                    {% elseif job.status == "complete" %}
                        <span data-c-color="gray" data-c-margin="right(.5)">Edit Draft</span>
                        <a href="" data-c-color="c1" title="" data-c-margin="right(.5)">View Poster</a>
                        <a href="" data-c-color="c1" title="" data-c-margin="right(.5)">View Screening Plan</a>
                        <span data-c-color="gray" data-c-margin="right(.5)">5 Applicants</span>
                    {% endif %}
                </p>
            {% elseif job.type == "hm" %}
                <p data-c-font-size="small" data-c-margin="top(.5)">
                    {% if job.status == "draft" %}
                        <a href="" data-c-color="c1" title="" data-c-margin="right(.5)">Edit Job</a>
                        <a href="" data-c-color="c1" title="" data-c-margin="right(.5)">Preview Poster</a>
                        <a href="" data-c-color="c1" title="" data-c-margin="right(.5)">Edit Screening Plan</a>
                        <span data-c-color="gray" data-c-margin="right(.5)">No Applicants</span>
                        <a href="" data-c-color="c1" title="" data-c-margin="right(.5)">Delete Poster</a>
                    {% elseif job.status == "in review" %}
                        <a href="" data-c-color="c1" title="" data-c-margin="right(.5)">Edit Job</a>
                        <a href="" data-c-color="c1" title="" data-c-margin="right(.5)">Preview Poster</a>
                        <a href="" data-c-color="c1" title="" data-c-margin="right(.5)">Edit Screening Plan</a>
                        <span data-c-color="gray" data-c-margin="right(.5)">No Applicants</span>
                        <a href="" data-c-color="c1" title="" data-c-margin="right(.5)">Delete Poster</a>
                    {% elseif job.status == "approved" %}
                        <span data-c-color="gray" data-c-margin="right(.5)">Edit Job</span>
                        <a href="" data-c-color="c1" title="" data-c-margin="right(.5)">Preview Poster</a>
                        <a href="" data-c-color="c1" title="" data-c-margin="right(.5)">Edit Screening Plan</a>
                        <span data-c-color="gray" data-c-margin="right(.5)">No Applicants</span>
                        <a href="" data-c-color="c1" title="" data-c-margin="right(.5)">Delete Poster</a>
                    {% elseif job.status == "published" %}
                        <span data-c-color="gray" data-c-margin="right(.5)">Edit Job</span>
                        <a href="" data-c-color="c1" title="" data-c-margin="right(.5)">View Poster</a>
                        <a href="" data-c-color="c1" title="" data-c-margin="right(.5)">Edit Screening Plan</a>
                        <span data-c-color="gray" data-c-margin="right(.5)">12 Applicants</span>
                        <span data-c-color="gray" data-c-margin="right(.5)">Delete Poster</span>
                    {% elseif job.status == "closed" %}
                        <span data-c-color="gray" data-c-margin="right(.5)">Edit Job</span>
                        <a href="" data-c-color="c1" title="" data-c-margin="right(.5)">View Poster</a>
                        <a href="" data-c-color="c1" title="" data-c-margin="right(.5)">View Screening Plan</a>
                        <a href="" data-c-color="c1" title="" data-c-margin="right(.5)">34 Applicants</a>
                        <span data-c-color="gray" data-c-margin="right(.5)">Delete Poster</span>
                    {% elseif job.status == "complete" %}
                        <span data-c-color="gray" data-c-margin="right(.5)">Edit Job</span>
                        <a href="" data-c-color="c1" title="" data-c-margin="right(.5)">View Poster</a>
                        <a href="" data-c-color="c1" title="" data-c-margin="right(.5)">View Screening Plan</a>
                        <span data-c-color="gray" data-c-margin="right(.5)">5 Applicants</span>
                        <span data-c-color="gray" data-c-margin="right(.5)">Delete Poster</span>
                    {% endif %}
                </p>
            {% endif %}
        </div>
        <div data-c-grid-item="tl(3of10)">
            <div data-c-grid="gutter">
                {% if job.type == "hr" %}
                    <div data-c-grid-item="base(1of1)">
                        <p 
                            data-c-font-size="small"
                            {% if job.hmTime == 0 %}
                                data-c-color="gray"
                            {% endif %}
                        >
                                Time with Manager: <span>{% if job.hmTime > 0 %}{{ job.hmTime }} Days{% else %}N/A{% endif %}</span>
                        </p>
                        <p 
                            data-c-font-size="small"
                            {% if job.attention == true %}
                                class="pulse"
                            {% endif %}
                            {% if job.hrTime == 0 %}
                                data-c-color="gray"
                            {% endif %}
                        >
                                Time with You: <span>{% if job.hrTime > 0 %}{{ job.hrTime }} Days{% else %}N/A{% endif %}</span>
                        </p>
                        <p 
                            data-c-font-size="small"
                            {% if job.tcTime == 0 %}
                                data-c-color="gray"
                            {% endif %}
                        >
                                Time with Talent Cloud: <span>{% if job.tcTime > 0 %}{{ job.tcTime }} Days{% else %}N/A{% endif %}</span>
                        </p>
                        <p data-c-margin="top(.5)" data-c-font-size="small">
                            {% if job.attention == true %}
                                <a href="TO COMMENTS HASH" title="View new activity on this job." data-c-color="stop">New Activity (3)</a>
                            {% else %}
                                <span data-c-color="gray">No New Activity</span>
                            {% endif %}
                        </p>
                    </div>
                {% elseif job.type == "hm" %}
                    <div data-c-grid-item="base(1of1)">
                        <p 
                            data-c-font-size="small"
                            {% if job.attention == true %}
                                class="pulse"
                            {% endif %}
                            {% if job.hmTime == 0 %}
                                data-c-color="gray"
                            {% endif %}
                        >
                                Time with You: <span>{% if job.hmTime > 0 %}{{ job.hmTime }} Days{% else %}N/A{% endif %}</span>
                        </p>
                        <p 
                            data-c-font-size="small"
                            {% if job.hrTime == 0 %}
                                data-c-color="gray"
                            {% endif %}
                        >
                                Time with HR: <span>{% if job.hrTime > 0 %}{{ job.hrTime }} Days{% else %}N/A{% endif %}</span>
                        </p>
                        <p 
                            data-c-font-size="small"
                            {% if job.tcTime == 0 %}
                                data-c-color="gray"
                            {% endif %}
                        >
                                Time with Talent Cloud: <span>{% if job.tcTime > 0 %}{{ job.tcTime }} Days{% else %}N/A{% endif %}</span>
                        </p>
                        <p data-c-margin="top(.5)" data-c-font-size="small">
                            {% if job.attention == true %}
                                <a href="TO COMMENTS HASH" title="View new activity on this job." data-c-color="stop">New Activity (3)</a>
                            {% else %}
                                <span data-c-color="gray">No New Activity</span>
                            {% endif %}
                        </p>
                    </div>
                {% endif %}
            </div>
        </div>
        <div data-c-grid-item="tl(2of10)" data-c-align="base(center)">
            <a href="" title="" data-c-button="solid(c1)" data-c-radius="rounded">
                Visit Job Summary
            </a>
        </div>
    </div>
</div>